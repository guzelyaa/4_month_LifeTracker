<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/start_registration"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistrationNumberFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="@id/lifeTrack"
        app:layout_constraintBottom_toBottomOf="@id/lifeTrack"
        app:layout_constraintEnd_toStartOf="@id/lifeTrack"
        android:src="@drawable/flame"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/vector2"
        android:layout_width="459dp"
        android:layout_height="190dp"
        android:src="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lifeTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="LifeTrack"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите номер телефона"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/numberEd"
        app:layout_constraintStart_toStartOf="@id/numberEd" />

    <EditText
        android:id="@+id/numberEd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="44dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/violet_rectangle"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите код"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/codeEd"
        app:layout_constraintStart_toStartOf="@id/codeEd" />

    <EditText
        android:id="@+id/codeEd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="44dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/violet_rectangle"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/sendNumberBtn"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/violet_btn"
        android:backgroundTint="@color/purple_500"
        android:text="Отправить номер"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendCodeBtn"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/violet_btn"
        android:backgroundTint="@color/purple_500"
        android:text="Отправить код"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>